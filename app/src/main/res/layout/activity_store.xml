<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_norm"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textview_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_gold"
        android:layout_centerHorizontal="true"
        android:text="ITEM SHOP"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#4C0000"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/textview_store"
        android:layout_toRightOf="@+id/textview_store"
        android:text="Your Gold :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4C0000"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_backstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_buy_items"
        android:layout_marginTop="48dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="backtolevel"
        android:text="Back"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4C0000"
        android:textStyle="bold|italic" />

    <Button

        android:id="@+id/btn_buy_mutator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_view_equip_mutator"
        android:backgroundTint="@android:color/transparent"
        android:text="Browse character mutators"
        android:textColor="#4C0000"
        android:textStyle="bold|italic" />
    android:layout_alignStart="" />

    <Button
        android:id="@+id/btn_buy_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_view_equip_mutator"
        android:layout_alignEnd="@+id/btn_backstore"
        android:layout_alignLeft="@+id/textView_gold"
        android:layout_alignRight="@+id/btn_backstore"
        android:layout_alignStart="@+id/textView_gold"
        android:layout_alignTop="@+id/btn_view_equip_mutator"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:text="Browse Dungeon Items"
        android:textColor="#4C0000"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_view_equip_mutator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_buy_mutator"
        android:layout_alignLeft="@+id/textview_store"
        android:layout_alignStart="@+id/textview_store"
        android:layout_alignTop="@+id/btn_buy_mutator"

        android:layout_toLeftOf="@+id/btn_buy_items"
        android:layout_toStartOf="@+id/btn_buy_items"
        android:backgroundTint="@android:color/transparent"
        android:text="View &amp; Equip Purchased Items"
        android:textColor="#4C0000"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView_goldvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_store"
        android:layout_toEndOf="@+id/textView_gold"
        android:layout_toRightOf="@+id/textView_gold"
        android:text="  $9999"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#4C0000"
        android:textStyle="bold|italic" />


</RelativeLayout>