<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_norm"
    >

    <ImageButton
        android:id="@+id/btn_backstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"
        android:backgroundTint="@android:color/transparent"
        android:onClick="backtolevel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_goldvalue"
        android:layout_toEndOf="@+id/textView_goldvalue" />

    <TextView
        android:id="@+id/textview_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEM SHOP"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#4C0000"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btn_backstore"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/textview_store"
        android:layout_toRightOf="@+id/textview_store"
        android:text="Your Gold :"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4C0000"
        android:textStyle="bold|italic" />

    <Button

        android:id="@+id/btn_buy_mutator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="purchase_character_items"
        android:backgroundTint="@android:color/transparent"
        android:text="Browse character mutators"
        android:textSize="25dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_buy_items"
        android:onClick="browsedungeonitems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Browse Dungeon Items"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btn_view_equip_mutator"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_view_equip_mutator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:onClick="equip_character_items"
        android:backgroundTint="@android:color/transparent"
        android:text="View &amp; Equip Purchased Items"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btn_buy_mutator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_goldvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btn_backstore"
        android:layout_toRightOf="@+id/textView_gold"
        android:layout_toEndOf="@+id/textView_gold" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton10"
        android:layout_margin="20dp"
        android:background="@drawable/logo_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>