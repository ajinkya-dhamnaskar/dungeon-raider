<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_norm"
    android:weightSum="1">


    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/back_icon"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:onClick="backtomainmenuscoreboard"
        android:textSize="30dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:id="@+id/btn_back"

        android:foregroundTint="@android:color/black"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton

        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/imageEye"
        android:background="@drawable/logo_eye"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sc_score_card"
        android:id="@+id/textViewScoreCard"
        android:textColor="#4C0000"
        android:textSize="38dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageEye"
        android:layout_toEndOf="@+id/imageEye" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/imageEye"
        android:layout_toRightOf="@+id/imageEye"
        android:layout_toEndOf="@+id/imageEye">
        android:layout_below="@+id/imageEye">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageEye"
            android:layout_toRightOf="@+id/imageEye"
            android:layout_margin="2dip"
            android:id="@+id/maintable"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></TableLayout>
    </ScrollView>


</RelativeLayout>