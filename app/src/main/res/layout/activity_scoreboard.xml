<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_norm"
    android:weightSum="1">


    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_button"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:onClick="backtomainscoreboard"
        android:textSize="30dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:id="@+id/btn_back"

        android:foregroundTint="@android:color/black"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton

        android:layout_width="180dp"
        android:layout_height="120dp"
        android:id="@+id/imageEye"
        android:background="@drawable/logo_eye"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    Score Card"
        android:id="@+id/textViewScoreCard"
        android:textColor="#4C0000"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btn_back"
        android:layout_centerHorizontal="true" />


</RelativeLayout>