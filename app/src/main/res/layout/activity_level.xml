<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:onClick="backtonewgame"
        android:textColor="#4C0000"
        android:id="@+id/btn_back"
        android:textSize="30dp"
        android:textStyle="italic"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/radioGroup"
        android:layout_toStartOf="@+id/radioGroup" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:textColor="#4C0000"
        android:id="@+id/btn_go"
        android:textSize="30dp"
        android:textStyle="italic"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignTop="@+id/btn_back"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup" />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">



    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TUTORIAL"
        android:id="@+id/radiotutorial"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#4C0000"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_back"
        android:layout_alignEnd="@+id/btn_back"
        android:layout_marginTop="94dp" />

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDIUM"
        android:id="@+id/radiomedium"
        android:textSize="30dp"
        android:textStyle="italic"
            android:checked="false"
            android:textColor="#4C0000"
            android:layout_below="@+id/radiotutorial"
            android:layout_alignLeft="@+id/radiotutorial"
            android:layout_alignStart="@+id/radiotutorial" />

        <RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="EASY"
    android:id="@+id/radioeasy"
    android:textSize="30dp"
    android:textStyle="italic"
    android:checked="false"
        android:textColor="#4C0000"
        android:layout_alignTop="@+id/radiotutorial"
        android:layout_alignLeft="@+id/btn_go"
        android:layout_alignStart="@+id/btn_go" />

        <RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="HARD"
    android:id="@+id/radiohard"
    android:textSize="30dp"
    android:textStyle="italic"
    android:checked="false"
        android:textColor="#4C0000"
        android:layout_below="@+id/radioeasy"
        android:layout_alignLeft="@+id/radioeasy"
        android:layout_alignStart="@+id/radioeasy" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STORE"
        android:id="@+id/radiostore"
        android:textSize="30dp"
        android:textColor="#4C0000"
        android:textStyle="italic"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    </RadioGroup>
</RelativeLayout>