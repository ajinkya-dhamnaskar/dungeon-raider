<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_norm"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="18"
        android:id="@+id/editText4"
        android:width="10dp"
        style="@android:style/TextAppearance"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:editable="true"
        android:longClickable="true"
        android:height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ng_enter_name"
        android:textSize="30dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:id="@+id/txt_entername"

        android:foregroundTint="@android:color/black"

        android:layout_above="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ng_choose_character"
        android:id="@+id/txt_character"

        android:foregroundTint="@android:color/black"
        android:textSize="30dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"

        android:layout_below="@+id/editText4"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtn_boy"
        android:background="@drawable/character_boy"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txt_character"
        android:layout_alignEnd="@+id/txt_character" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txt_entername"
        android:layout_alignEnd="@+id/txt_entername" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtn_girl"
        android:background="@drawable/character_girl"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imgbtn_boy"
        android:layout_toEndOf="@+id/imgbtn_boy"
        android:layout_alignTop="@+id/imgbtn_boy" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"

        android:background="@drawable/logo_eye"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imgbtn_boy"
        android:layout_above="@+id/txt_entername" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_button"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:onClick="backtomainnewgame"
        android:textSize="30dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:id="@+id/btn_back"

        android:foregroundTint="@android:color/black"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:id="@+id/btn_confirm"
        android:onClick="gotolevel"
        android:backgroundTint="@android:color/transparent"
        android:textSize="25dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/imgbtn_girl"
        android:layout_alignRight="@+id/btn_back"
        android:layout_alignEnd="@+id/btn_back" />


</RelativeLayout>