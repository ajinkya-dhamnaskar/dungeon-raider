<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/back_norm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pd_purchase_dungeon_items"
        android:id="@+id/textview_store"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_alignBottom="@+id/imageViewBackButton"
        android:layout_alignRight="@+id/imgBtnPotion"
        android:layout_alignEnd="@+id/imgBtnPotion" />


    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/back_icon"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:onClick="backtostorescreen"
        android:textSize="30dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:id="@+id/imageViewBackButton"
        android:foregroundTint="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnKey"
        android:onClick="buydungeonkey"
        android:background="@drawable/img_key"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/imgBtnPotion"
        android:layout_toLeftOf="@+id/imgBtnPotion"
        android:layout_toStartOf="@+id/imgBtnPotion" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnMap"
        android:onClick="buydungeonmap"
        android:background="@drawable/map"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/imgBtnKey"
        android:layout_toLeftOf="@+id/imgBtnKey"
        android:layout_toStartOf="@+id/imgBtnKey" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buydungeonpotion"
        android:id="@+id/imgBtnPotion"
        android:background="@drawable/potion"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgBtnBomb"
        android:layout_toStartOf="@+id/imgBtnBomb" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buydungeonbombs"
        android:id="@+id/imgBtnBomb"
        android:background="@drawable/bomb"
        android:layout_alignTop="@+id/imgBtnPotion"
        android:layout_toLeftOf="@+id/imageViewBackButton"
        android:layout_toStartOf="@+id/imageViewBackButton"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="YOUR GOLD"
        android:textSize="20dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:id="@+id/textView3"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textview_store"
        android:layout_toLeftOf="@+id/textView_goldvalue"
        android:layout_toStartOf="@+id/textView_goldvalue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_goldvalue"
        android:textSize="20dp"
        android:textColor="#4C0000"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/textView3"
        android:layout_toLeftOf="@+id/imageViewBackButton"
        android:layout_toStartOf="@+id/imageViewBackButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewKeysOwned"
        android:layout_below="@+id/imgBtnKey"
        android:layout_alignLeft="@+id/imgBtnKey"
        android:layout_alignStart="@+id/imgBtnKey"
        android:layout_toLeftOf="@+id/imgBtnPotion"
        android:layout_toStartOf="@+id/imgBtnPotion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewPotionsOwned"
        android:layout_below="@+id/imgBtnPotion"
        android:layout_alignLeft="@+id/imgBtnPotion"
        android:layout_alignStart="@+id/imgBtnPotion"
        android:layout_alignRight="@+id/imgBtnPotion"
        android:layout_alignEnd="@+id/imgBtnPotion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewBombsOwned"
        android:layout_below="@+id/imgBtnBomb"
        android:layout_alignLeft="@+id/imgBtnBomb"
        android:layout_alignStart="@+id/imgBtnBomb"
        android:layout_alignRight="@+id/imgBtnBomb"
        android:layout_alignEnd="@+id/imgBtnBomb" />

</RelativeLayout>